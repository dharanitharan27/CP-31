#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin >> t;
    while (t--) {
           int n,x;
           cin>>n;
           int c1=0,c2=0;
           for(int i=0;i<n;i++)
            {
                cin>>x;
                if(x==0) c1++;
                if(x==1) c2++;
            }
         cout<<(1ll << c1)*(ll)c2<<endl;
    }

}
