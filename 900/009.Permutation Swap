#include <bits/stdc++.h>
using namespace std;
void solve() {
   int n;
   cin>>n;int res=0;
   for(int i=1;i<=n;i++)
   {
      int x;
      cin>>x;
      res=__gcd(res,abs(x-i));
   }  
   cout<<res<<endl;
}
 
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--) {
        solve();
    }
}
