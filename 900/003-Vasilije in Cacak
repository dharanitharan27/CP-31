#include <bits/stdc++.h>
using namespace std;
void solve() {
   long long n,k,x;
   cin>>n>>x>>k;
   if(2*k>=x*(x+1) && 2*k<=n*(n+1)-(n-x)*(n-x+1))
   {
     cout<<"Yes"<<endl;
   }
   else{
     cout<<"No"<<endl;
   }
}

int main() {
    int t = 0;
    cin >> t;
    while (t--) solve();
    return 0;
}
