#include <iostream>
using namespace std;

void solve() {
    int t;
    cin >> t; 
    while (t--) {
        int n, a, b;
        cin >> n >> a >> b;
        if (a + b <=n-2 || a==b && b==n) {
            cout << "Yes" << endl;
        } else {
            cout << "No" << endl;
        }
    }
}

int main() {
    solve();
    return 0;
}
